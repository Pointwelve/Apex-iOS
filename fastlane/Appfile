# Fastlane Appfile for Apex iOS

# Apple ID for App Store Connect
apple_id(ENV["APPLE_ID_EMAIL"])

# App identifier
app_identifier("com.pointwelve.Apex")

# Apple Developer Team ID
team_id(ENV["APPLE_TEAM_ID"])

# App Store Connect Team ID (if different from Developer Team ID)
itc_team_id(ENV["APPLE_TEAM_ID"])

# For App Store Connect API authentication
app_store_connect_api_key(
  key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
  issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
  key_content: ENV["APP_STORE_CONNECT_API_KEY"],
  is_key_content_base64: true,
  duration: 1200, # 20 minutes
  in_house: false
)